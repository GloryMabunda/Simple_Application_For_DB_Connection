@using CSVWebApplication.Models
@model IEnumerable<Order>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewData["Title"] = "Landing Page";
}
<h2>Orders</h2>

@if (Model.Count() > 0)
{
    <table class="table-striped">
        <tr>
            <th>Order ID</th>
            <th>Order Number</th>
            <th>Order Status</th>
            <th>Date Created</th>
            <th>Total</th>
            <th>Customer ID</th>
            <th>Couier Company</th>
            <th>Way Bill No</th>
        </tr>
        @foreach (Order order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.Number</td>
                <td>@order.Status</td>
                <td>@order.Datecreated</td>
                <td>@order.Total</td>
                <td>@order.CustomerId</td>
                <td>@order.CouierCompany</td>
                <td>@order.WayBillNo</td>
            </tr>
        }
    </table>
}
